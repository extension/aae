<div id="main" class="span8">
  <div class="groupmasthead">
    <%= link_public_group_avatar(@group) %>
    
    <h1>
      <%= @group.name %> 
      <% if current_user && current_user.has_exid? %>
        <%= link_to "expert view", expert_group_path(@group.id), :class => "btn" %>
      <% end %>
    </h1>
    
    <% if  @group.description? %>
      <div class="aboutme">
        <%= format_text_for_display(@group.description) %>
      </div>
    <% end %>
    
    <% if @group.widget_active %>
      <p><%= link_to "Ask a question to this group", ask_group_path(@group.id), :class => "btn large btn-primary" %></p>
    <% end %>
  </div>
  
  <% if @open_questions.size == 0 %>
    <h3>This group does not currently have any public questions.</h3>
  <% else %>
  <h3>Questions asked to this group</h3>
    <% @open_questions.each do |q| %> 
      <%= link_to question_path(q.id) do %>
                  
          <h3><%= format_text_for_display(q.title) -%></h3>
          <p><%= Question.html_to_pretty_text(q.body).html_safe -%></p>

      <% end %>
      
      <p>
        <% if q.location.present? %>
          <% if q.county.present? %>
            <span class="tag tag-geography"><%= "#{q.county.name}" %></span>
          <% end %>
          <% if q.location.present? %>
            <span class="tag tag-geography"><%= q.location.name %></span>
          <% end %>
        <% end %>

      <% if q.tags.size > 0 %>
        <% q.tags.each do |tag| %>
          <span class="tag tag-topic"><%= link_to tag.name, questions_by_tag_path(:name => tag.name) %></span>
        <% end %>
      <% end %>
       Posted <%= time_ago_in_words(q.created_at) %> ago
    <% end %>
	</p>
  <% end %>
  
  
</div>

<div id="secondary" class="span4">
  
</div>