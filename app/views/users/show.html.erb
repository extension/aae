<div id="main" class="span6">
  
  <h1>
    <%= @user.public_name %>
    <% if current_user && current_user.has_exid? %>
      <%= link_to "expert view", expert_user_path(@user.id), :class => "btn" %>
    <% end %>
  </h1>
  
  <div id="location_list">

  <% if @user.expertise_locations.length > 0 %>

    <h3>Locations</h3>
      <% @user.expertise_locations.each do |l| %>
        <div class="location">

          <h4><span class="tag tag-geography"><%= link_to l.name, view_location_path(l.id) %></span></h4>

          <% if @user.expertise_locations.where("location_id = ?", l.id).length > 0 %>
            <% if @user.expertise_counties.where("location_id = ?", l.id).length > 0 %>
              <ul>
                <% @user.expertise_counties.where("location_id = ?", l.id).each do |c| %>
                  <li><span class="tag tag-geography"><%= link_to "#{c.name}", view_county_path(c.id) %></span></li>
                <% end %>
              </ul>
            <% else %>
                <ul>
                  <li class="all_counties">All counties</li>
                </ul>
              <% end %>
            <% end %>

        </div>
      <% end %>

  <% end %>
  
  
  
  <%= get_public_avatar(@user) %>
  
  <p>
    <strong>About me:</strong>
    <% if @user.bio %>
      <%= @user.bio %>
    <% else %>
      This person hasn't added a description yet...
    <% end  %>
  </p>
  
  <% if @user.tags.length > 0 %>
    <h3>
    <% @user.tags.each do |tag| %>
      <span class="label"><%= tag.name %></span>
    <% end %>
    </h3>
  <% end %>

  </div>
</div>


<div id="main" class="span6">
  <h3>Assigned Questions</h3>

  <% @open_questions.each do |question| %>
  <div class="answered_question">

      <%= link_to question_path(question.id) do %>
        <% if question.title.present? %>
          <p><%= format_text_for_display(question.title) -%></p>
        <% else %>
          <p><%= format_text_for_display(question.body.truncate(80, separator: ' ')) %></p>
        <% end %>
      <%- end -%>
      <p><%= time_ago_in_words(question.created_at) %> ago </p>
  
  </div>
  <% end %>
  
  
  <h3>Answered Questions</h3>

  <% @answered_questions.each do |question| %>
  <div class="answered_question">

      <%= link_to question_path(question.id) do %>
        <% if question.title.present? %>
          <p><%= format_text_for_display(question.title) -%></p>
        <% else %>
          <p><%= format_text_for_display(question.body.truncate(80, separator: ' ')) %></p>
        <% end %>
      <%- end -%>
      <p><%= time_ago_in_words(question.created_at) %> ago </p>
  
  </div>
  <% end %>
  
  
  
</div>