<h1>Questions in '<%= @location.name %>' (<%= number_with_delimiter(@question_total_count, :delimiter => ',') %>)</h1>
<h3><%= link_to "View everything in '#{@location.name}'", expert_view_location_path(:id => @location.id) %></h3>

<div class="listview">

<%= paginate @questions %>
<% if @questions.size > 0 %>
  <% @questions.each do |question| %>
    <%= render :partial => 'expert/shared/title_question', :locals => {:question => question, :show_assignments => false} %>
  <% end %>

<% else %>
  <p>There are no questions in this group with this tag</p>
<% end %>
<%= paginate @questions %>
</div>