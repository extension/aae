<h1>Experts tagged with '<%= @tag.name %>'</h1>

<% if @experts.length > 0 %>
  <table>
    <tr>
      <th>Name</th>
      <th>Location</th>  
    </tr>
  <% @experts.each do |expert| %>
    <tr>
      <td><%= get_avatar(expert, :thumb) %> <%= link_to expert.name, expert_user_path(expert.id) %></td>
    </tr>
  <% end %>
  </table>
<% else %>
  <p>There are no experts with this tag</p>
<% end %>