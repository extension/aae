<div id="main" class="span8">
  <div class="map"></div>
<h1><%= @location.name %></h1>

<div class="tag_summary">
  <h2>Questions (<%= number_with_delimiter(@question_total_count, :delimiter => ',') %>)</h2>
<% if @questions.length > 0 %>
  <table>
    <tr>
      <th>Status</th>
      <th>Question</th>  
    </tr>
  <% @questions.each do |question| %>
    <tr>
      <td><%= question.status %></td>
      <td>
        <% # ToDo: Override title method in question to take care of this instead of repeating this logic. %>
        <% if question.title.present? %>
          <%= format_text_for_display(question.title) %>
        <% else %>
          <%= link_to format_text_for_display(question.body.truncate(80, separator: ' ')), expert_question_path(question) %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </table>
  <p>view all</p>
<% else %>
  <p>There are no questions in this location</p>
<% end %>
</div>

<div class="tag_summary">
  <h2>Experts (<%= number_with_delimiter(@expert_total_count, :delimiter => ',') %>)</h2>
<% if @experts.length > 0 %>
  <% @experts.each do |member| %>
    <p><%= get_avatar(member, :thumb) %> <%= link_to member.name, expert_user_path(member.id) %></p>
  <% end %>
  <p>view all</p> 
<% else %>
  <p>There are no experts in this location</p>
<% end %>
</div>

<div class="tag_summary">
  <h2>Groups (<%= number_with_delimiter(@group_total_count, :delimiter => ',') %>)</h2>
<% if @groups.length > 0 %>
  <% @groups.each do |group| %>
    <p><%= link_expert_group_avatar(group, :thumb) %> <%= link_to group.name, expert_group_path(group.id) %></p>
  <% end %>
  <p>view all</p> 
<% else %>
  <p>There are no groups in this location</p>
<% end %>
</div>
</div>

<div id="secondary" class="span4">
  <ul class="county_list">
  <% @counties.each do |county| %>
    <li><span class="tag tag-geography"><%= link_to "#{county.name}", expert_view_county_path(county.id) %></span></li>
  <% end %>
  </ul>
</div>