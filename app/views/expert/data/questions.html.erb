<div class="span12">

<%= render(:partial => 'data_breadcrumbs', :locals => {:endpoint => 'Questions'}) %>

<%- @page_title = "Browse questions" -%>

<div class="page-header">
  <h2><%= @page_title %></h2>
    <%= link_to(@showform ? "Filter Options <i class='fa fa-caret-down'></i>".html_safe : "Filter Options <i class='fa fa-caret-right'></i>".html_safe,
                '#',
                id: 'formtoggler',
                data: {toggle: 'collapse', target: '#showform'}) %>

    <div id="showform" class="<%= (@showform ? 'collapse in' : 'collapse') -%>">
      <%= render(:partial => 'expert/data/question_filter_form', locals: {filter_path: filter_questions_expert_data_path}) %>
    </div>
</div>

<div class="row-fluid">
  <div class="question_filter">
    <%- if @aae_filter -%>
    <div class='well'>
      <p>Filtering results by:</p>
      <p><%= filter_text(@question_filter_objects) %></p>
    </div>
    <%- end -%>
  </div>
</div>


<%- if !@questions.blank? -%>
<div class="row-fluid">
  <div class="span12">
    <p class='pull-right'>
      <%= link_to("<i class='fa fa-file-o'></i> Download this list (.csv)".html_safe,
                  '',
                  :class => 'btn') %>
    </p>
    <%= page_entries_info @questions %>
    <%= paginate(@questions) %>

    <table class="table table-bordered table-striped">
      <thead>
        <tr>
        <th>Internal ID</th>
        <th>Submitted</th>
        <th>Status</th>
        <th>Location</th>
        <th>Assigned Group</th>
        <th>Initial Response</th>
        <th>Initial Responder Location</th>
        </tr>
      </thead>

      <tbody>
      <%- for question in @questions -%>
        <tr id="question_row_<%= question.id %>">
          <td><%= link_to("Question ##{question.id}",expert_question_path(id: question.id)) %></td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
          <td>&nbsp;</td>
        </tr>
      <%- end -%>
      </tbody>
    </table>

  </div>
</div>
<%- end -%>

</div>


<script type="text/javascript">

$('#showform').on('show', function () {
  $('#formtoggler').html("Filter Options <i class='fa fa-caret-down'></i>");
});

$('#showform').on('hide', function () {
  $('#formtoggler').html("Filter Options <i class='fa fa-caret-right'></i>");
});

$(".status_icon").tooltip();

</script>
