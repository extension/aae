<div id="main" class="span8">

<%= render :partial => 'partials/question_main' %>

<div id="secondary" class="span4">
  <aside>
    <p><%= link_to "View Public page", question_path(@question.id) %></p>
    <p><%= link_to "Notify me when this question has activity" %></p>
  </aside>
  
  <% if @question_responses.length < 1%>
    <aside>
      <h3>Actions</h3>
      <p><%= link_to "Reassign" %></p>
      <p><%= link_to "Reject (inappropriate or duplicate)" %></p>
    </aside>
  
    <aside>
        <div class="expert">
          <h3>Assigned to</h3>
          <span class="avatar"></span>
          <p>Expert Name</p>
          <p>Expert Description</p>
        </div>
    </aside>
  <% end %>
  
  <aside>
    <%= render :partial => 'partials/related' %>
  </aside>
  
</div>