

<ul class="nav nav-tabs">
  <li><%= link_to 'Edit group', expert_group_profile_path() %></li>
</ul>

<aside>
<% if @group.active %>
	<p>
	  <%= link_to ask_group_path(@group.id), :class => "btn btn-success" do %>
	    <i class="icon-signal icon-white"></i>
	    Question Form is Live
	  <% end %>
	  <%= link_to 'Options', expert_group_widget_path() %>
	</p>
<% else  %>
	<p>This groups widget is <%= link_to 'currently inactive', expert_group_widget_path() %></p>
<% end %>
</aside>


<% if  @group.description? %>
  <aside>
    <p><%= format_text_for_display(@group.description).html_safe %></p>
  </aside>
<% end %>


<aside>
  <%= render :partial => 'location_summary' %>
</aside>

<aside>
  <h3>Group Tags <%= link_to "(#{@group.tags.count})", expert_group_tags_path() %></h3> 

  <% if @group_tags.length > 0 %>
    <% @group_tags.each do |tag| %>
      <p><span class='tag tag-topic'><%= link_to tag.name, questions_by_tag_expert_groups_path(:group_id => @group.id, :tag_id => tag.id) %></span></p>
    <% end %>
  <% else %>
    <p>There are no tags at this time.</p>
  <% end %>
  <p><%= link_to 'View all', expert_group_tags_path() %></p>
</aside>


<aside>
  <div id="membership_connection">
    <%= render :partial => 'membership_connection' %>
  </div>
  <div id="group_members">
  <% @group_members.each do |member| %>
    <p>
      <%= get_avatar(member, :thumb) %> <%= link_to member.name, expert_user_path(member.id) %>
      <% if member.leader_of_group(@group) %>
      <strong><i class="icon-user"></i> Leader</strong>
      <% end %>
    </p>
  <% end %>
  </div>
  <p><%= link_to 'view all', expert_group_members_path(@group) %></p>
  
</aside>