<% if current_user.member_of_group(@group) %>
  <p><%= link_to 'Leave Group', expert_group_leave_path(), :class => "btn" %> 
  
  <% if current_user.leader_of_group(@group) %>
    <%= link_to 'Leave Leadership', expert_group_unlead_path(), :class => "btn" %>
  <% else %>
    <%= link_to 'Be a Group Leader', expert_group_lead_path(), :class => "btn" %>
  <% end %>
  </p>
<% else%>
  <p><%= link_to 'Join Group', expert_group_join_path(), :class => "btn" %></p>
<% end %>