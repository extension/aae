<div class="map"></div>
<h1><%= @county.name %>, <%= link_to @location.name, view_location_path(@location.id) %></h1>

<div class="tag_summary">
  <h2>Questions (<%= number_with_delimiter(@question_total_count, :delimiter => ',') %>)</h2>
<% if @questions.size > 0 %>
  <table>
    <tr>
      <th>Status</th>
      <th>Question</th>  
    </tr>
  <% @questions.each do |question| %>
    <tr>
      <td><%= question.status %></td>
      <td>
        <% # ToDo: Override title method in question to take care of this instead of repeating this logic. %>
        <% if question.title.present? %>
          <%= format_text_for_display(question.title) %>
        <% else %>
          <%= link_to format_text_for_display(question.body.truncate(80, separator: ' ')), question_path(question) %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </table>
  <p>view all</p>
<% else %>
  <p>There are no questions in this county</p>
<% end %>
</div>

<div class="tag_summary">
  <h2>Experts (<%= number_with_delimiter(@expert_total_count, :delimiter => ',') %>)</h2>
<% if @experts.size > 0 %>
  <% @experts.each do |member| %>
    <p><%= link_public_user_avatar(member, :thumb) %> <%= link_to member.public_name, user_path(member.id) %></p>
  <% end %>
  <p>view all</p> 
<% else %>
  <p>There are no experts in this county</p>
<% end %>
</div>

<div class="tag_summary">
  <h2>Groups (<%= number_with_delimiter(@group_total_count, :delimiter => ',') %>)</h2>
<% if @groups.size > 0 %>
  <% @groups.each do |group| %>
    <p><%= link_public_group_avatar(group, :thumb) %> <%= link_to group.name, group_path(group.id) %></p>
  <% end %>
  <p>view all</p> 
<% else %>
  <p>There are no groups in this county</p>
<% end %>
</div>


