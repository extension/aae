<div id="main" class="span8">
  <h1>Recent Questions</h1>
  
  <% @recent_questions.each do |question| %>
  <div class="incoming_question">
    <%= link_to question_path(question.id) do %>
      <% if question.title.present? %>
        <h3><%= format_text_for_display(question.title) -%></h3>
      <% else %>
        <h3><%= format_text_for_display(question.body.truncate(80, separator: ' ')) %></h3>
      <% end %>
      <p><%= question.body -%></p>
    <%- end -%>
    <p>Location <span class="label">Tags</span> <span class="label">Tags</span> <span class="label">Tags</span>  <%= time_ago_in_words(question.created_at) %> ago 
      <% if current_user %>
        <%= link_to "edit/view", expert_question_path(question.id), :class => "label btn-info" %>
      <% end %>
      
      </p>
    </div>
  <% end %>
  
</div>

<div id="main" class="span4">
  <aside>
    <h2>Your Location...</h2>
    <p>County, State</p>
    
    <h2>Extension Near You</h2>
    <div id="institution"></div>
    
    <h4>Show local active agents?</h4>
  </aside>
</div>