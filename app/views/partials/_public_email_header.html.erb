      <h1 id="ask_logo"><%= image_tag("#{ssl_root_url}assets/email_extension_logo.png", alt: "eXtension: Ask an Expert") %></h1>
    </th>
  </tr>
  
  <tr class="tagline">
    <td><%= @title %></td>
  </tr>
