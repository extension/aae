<div class="cc-comment-form">

  <% if defined?(@errors) && @errors.present? %>
    <div class="alert alert-error">
      <p><%= @errors %></p>
    </div>
  <% end %>

  <%= form_for @comment, html: {class: "no-top-margin"}, remote: true do |f| %>
    <% if current_user.has_exid? %>
      <p><%= link_public_user_avatar(current_user, :thumb) %> <%= link_to current_user.public_name, user_path(current_user.id) %></p>
    <% else %>
      <p><strong><%= current_user.public_name %></strong></p>
    <% end %>

    <%= f.text_area :content, cols: 20, rows: 5, class: "form-control required wysihtml5" %>

    <% if @comment.ancestry.present? %>
      <%= hidden_field_tag 'parent_comment_id', @comment.ancestry %>
    <% end %>

    <%= f.hidden_field :question_id, value: @comment.question.id %>

    <%= f.submit "Update comment", disable_with: 'Saving...', id: 'comment-submit', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', cancel_edit_comments_path(comment_id: @comment.id), class: 'btn btn-default', remote: true %>
    <%= link_to 'delete', comment_path(@comment.id), class: "btn btn-danger pull-right", confirm: 'Are you sure you want to delete this?', method: :delete, remote: true %>

  <% end %>

</div>
