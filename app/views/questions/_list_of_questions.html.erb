<h1 class="title"><%= @filter_string.present? ? @filter_string : "No filters" %></h1>

<% if questions.present? && questions.length > 0 %>

  <% questions.each do |question| %>
    <%= render :partial => 'home/full_public_question', :locals => {:question => question} %>  
  <% end %>

  <%= page_entries_info questions %>
  <%= paginate questions, :params => {:controller => 'questions', :action => 'index'} %>

<% else %>

  <div class="no_reassign_matches">
    <h3>There are no questions that match that filter</h3>
  </div>
  
<% end %>
