<% if @object.expertise_locations.where("location_id = ?", location_id).size > 0 %>
  
  <% if @object.expertise_counties.where("location_id = ?", location_id).size > 0 %>
    <ul>
      <% @object.expertise_counties.where("location_id = ?", location_id).each do |c| %>
        <% if c.name == 'All Counties' %>
          <li class="all_counties">All Counties</li>
        <% else %>
          <li><%= c.name %> <span id="county_<%= c.id %>" class="removecounty btn">X</span></li>
        <% end %>
      <% end %>
    </ul>
  
  <% else %>
    <ul>
      <li class="all_counties">All Counties</li>
    </ul>
  <% end %>
  
<% end %>
