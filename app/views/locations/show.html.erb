<div id="main" class="col-md-8">

  <div class="map"></div>
  <h1>Ask a Question</h1>
  <h1><%= @location.name %></h1>

  <h2>Groups accepting questions</h2>
  <div class="col-md-12">
    <%- if(@location.primary_groups.count < 1) -%>
      <h3>No primary groups have been designated for this location</h3>
    <%- end -%>
  </div>

  <div class="col-md-12">
  <%- if @location.active_primary_groups.count >= 1 -%>
    <%- @location.primary_groups.order(:name).each do |group| -%>
      <div class="primary-group">
        <h2 class="primary-group-name"><%= link_to group.name, group_path(group) -%></h2>
        <div class="primary-group-description">
          <% if group.description? %>
            <%= format_text_for_display(group.description) %>
          <% end  %>
        </div>
        <%= link_to "Ask your question to this group", ask_group_path(group), :class => "btn btn-default btn-lg" -%>
      </div>
    <%- end -%>
  <%- end -%>
  </div>
</div>
